<% provide(:title, "ログイン") %>
<div class="input-form">
  <h1>ログインページ</h1>
  
  <%= form_for(:session, url: login_path, html: { class: "form-wrapper" }) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password %>
    <%= link_to "パスワードをお忘れですか？", new_password_reset_path, class: "forget-password" %>
  </div>
  
  <div class="submit-wrapper">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
    
    <%= f.label :remember_me, class: "" do %>
    <%= f.check_box :remember_me %>
    <span>ログインしたままにする</span>
    <% end %>
    
  </div>
  
  <% end %>
</div>
